{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "consistent-return": 0,
        "indent"           : [1, 4],
        "no-else-return"   : 0,
        "semi"             : [1, "always"],
        "space-unary-ops"  : 2
    }
}
